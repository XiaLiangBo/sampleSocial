<script id="tmpl-LinkedInCompanys" type="text/html">
<div class="LinkedInCompanys">
	<div class="LinkedInCompanys-top">
		<button class="btn btn-primary followed-companys">Followed Companys</button>
		<button class="btn btn-primary suggests-followed-companys">Suggests Followed Companys</button>
	</div>
	<div class="LinkedInCompanys-body">
	</div>
