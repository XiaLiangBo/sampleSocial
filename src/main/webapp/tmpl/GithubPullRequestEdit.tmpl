<script id="tmpl-GithubPullRequestEdit" type="text/html">
  <div class="github">
	  <div class="dialogBackground"></div>
      <div class="dialogContent" style="left:{{layout.left}};top:{{layout.top}};width:{{layout.width}};height:{{layout.height}}">
          <div class="dialogHead" style = "overflow: hidden;">
              <span class="close dialogBtns dialogCloseBtn">&times;</span>
              <span class="dialogTitle">PullRequest: {{title}}</span>
          </div>
          <div class="dialogBody" data-repository-name="{{repoName}}" data-pullrequest-id="{{id}}" data-login="{{login}}">
              <div>
                  <div>Title:</div>
                  <input type="text" name="pullRequestTitle" value="{{title}}" class="input-block-level" disabled style="width: 100%;" placeholder="type the pull request title"/>
              </div>
              <div class="PullRequestBody">
                  <div>Body:</div>
                  <textarea class="form-control pullRequest-body" value="{{body}}" disabled placeholder="Leave a comment"></textarea>
              </div>
              <div class="dialogBtns" style="margin-top: 16px;">
                  <button class="btn btn-primary cancel">Cancel</button>
              </div>
          </div>
      </div>
  </div>
</script>